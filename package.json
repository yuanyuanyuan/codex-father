{
  "name": "codex-father",
  "version": "5.0.0",
  "description": "Codex Father - 基于三阶段实施方案的CLI工具架构，支持MCP服务器模块",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "cli",
    "typescript",
    "mcp",
    "task-queue",
    "automation",
    "development-tools"
  ],
  "author": "Codex Father Maintainers",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "codex-father": "dist/core/cli/start.js",
    "codex-father-start": "start.sh",
    "codex-father-job": "job.sh"
  },
  "files": [
    "dist",
    "config",
    "scripts",
    "start.sh",
    "job.sh",
    "start.d",
    "job.d",
    "lib",
    "mcp_init_helper.sh",
    "mcp_wizard.sh",
    "*.md",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "workspaces": [
    "mcp/codex-mcp-server"
  ],
  "scripts": {
    "dev": "tsx --watch core/cli/start.ts",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist .tsbuildinfo",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:coverage": "vitest run --coverage",
    "test:batch": "tsx scripts/run-batch-tests.ts",
    "test:split-unit": "tsx scripts/run-split-unit-tests.ts",
    "test:quick": "bash scripts/quick-test.sh",
    "test:orchestrator": "ORCHESTRATOR_TESTS=1 vitest run --config vitest.orchestrator.config.ts",
    "test:merge": "tsx scripts/merge-test-results.ts",
    "test:clean": "rm -rf test-results coverage",
    "lint": "eslint core scripts --fix",
    "lint:check": "eslint core scripts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "start": "node dist/core/cli/start.ts",
    "mcp:start": "node dist/core/cli/start.ts mcp",
    "check:all": "npm run lint",
    "release:preflight": "npm run clean && npm run build && npm run check:all",
    "release:precheck": "./scripts/release-precheck.sh",
    "release:dry-run": "scripts/release.sh --dry-run",
    "release:local": "scripts/release.sh --local",
    "release:main": "scripts/release.sh --main",
    "preview:mcp:test": "./test_preview_mcp.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "fast-xml-parser": "^5.3.0",
    "helmet": "^8.1.0",
    "inquirer": "^9.3.8",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "ws": "^8.18.3",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "tsx": "^4.6.0",
    "typescript": "^5.9.3",
    "vitest": "^1.0.0"
  }
}
