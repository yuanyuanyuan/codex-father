{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "request": {
    "type": "object",
    "properties": {
      "sessionId": {
        "type": "string",
        "description": "会话ID"
      },
      "includeToken": {
        "type": "boolean"
      },
      "refreshToken": {
        "type": "boolean"
      }
    },
    "required": [],
    "additionalProperties": false
  },
  "response": {
    "type": "object",
    "properties": {
      "authenticated": {
        "type": "boolean"
      },
      "method": {
        "type": "string",
        "enum": ["chatGpt", "apiKey"]
      },
      "token": {
        "type": "string"
      },
      "expiresAt": {
        "type": "string",
        "format": "date-time"
      }
    },
    "required": ["authenticated"],
    "additionalProperties": false
  }
}
