{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "request": {
    "type": "object",
    "properties": {
      "limit": {
        "type": "number",
        "description": "限制数量"
      },
      "offset": {
        "type": "number",
        "description": "偏移量"
      },
      "status": {
        "type": "string",
        "description": "状态过滤"
      }
    },
    "required": []
  },
  "response": {
    "type": "object",
    "properties": {
      "conversations": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "status": {
              "type": "string"
            },
            "createdAt": {
              "type": "string"
            },
            "updatedAt": {
              "type": "string"
            },
            "title": {
              "type": "string"
            }
          }
        }
      },
      "total": {
        "type": "number"
      },
      "hasMore": {
        "type": "boolean"
      }
    },
    "required": ["conversations", "total", "hasMore"]
  }
}
