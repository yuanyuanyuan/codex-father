#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

set -eu

echo "🌐 Checking README-linked bilingual docs..."
bash scripts/hooks/check-bilingual-docs.sh

echo "🛡️ Running pre-push full checks (check:all:parallel)..."
if ! npm run -s check:all:parallel; then
  echo "❌ Pre-push checks failed. Push aborted. Use --no-verify to bypass (not recommended)."
  exit 1
fi

echo "✅ Pre-push checks passed"
